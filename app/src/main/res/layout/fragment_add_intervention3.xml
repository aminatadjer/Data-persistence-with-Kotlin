<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.addInterventionFragment">
    <LinearLayout
        android:id="@+id/dateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date_add"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <Button
            android:id="@+id/buttonDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PickDate" />
    </LinearLayout>
    <EditText
        android:layout_below="@id/dateLayout"
        android:id="@+id/NumEdit"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NumÃ©ro"
        android:inputType="text"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />



    <Spinner
        android:layout_below="@id/NumEdit"
        android:id="@+id/spinnerType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:layout_below="@id/spinnerType"
        android:id="@+id/spinnerPlombier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_save_Intervention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="176dp"
        android:clickable="true"
        android:src="@drawable/ic_save" />
    <TextView
        android:layout_below="@id/button_save_Intervention"
        android:id="@+id/chosedType"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type"
        android:inputType="text"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    <TextView
        android:layout_below="@id/chosedType"
        android:id="@+id/chosedPlumber"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Plumber"
        android:inputType="text"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />


</RelativeLayout>