<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.exercice3.ui.HomeFragment"
        android:label="home"
        tools:layout="@layout/fragment_home2" >
        <action
            android:id="@+id/actionIntervention"
            app:destination="@id/interventionFragment" />
        <action
            android:id="@+id/actionPlombier"
            app:destination="@id/plombierFragment" />
    </fragment>
    <fragment
        android:id="@+id/interventionFragment"
        android:name="com.example.exercice3.ui.InterventionFragment"
        android:label="intervention"
        tools:layout="@layout/fragment_intervention" >
        <action
            android:id="@+id/actionInterHome"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/actionAddIntervention"
            app:destination="@id/addInterventionFragment" />

        <action
            android:id="@+id/actionFilter"
            app:destination="@id/search" />
    </fragment>
    <fragment
        android:id="@+id/plombierFragment"
        android:name="com.example.exercice3.ui.PlombierFragment"
        android:label="plombier"
        tools:layout="@layout/fragment_plombier" >
        <action
            android:id="@+id/actionPlomHome"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/actionAddPlombier"
            app:destination="@id/addPlombierFragment" />
    </fragment>
    <fragment
        android:id="@+id/addPlombierFragment"
        android:name="com.example.exercice3.ui.AddPlombierFragment"
        android:label="fragment_add_plombier2"
        tools:layout="@layout/fragment_add_plombier2" >
        <action
            android:id="@+id/actionPlombierRetour"
            app:destination="@id/plombierFragment" />
        <argument
            android:name="plumber"
            app:nullable="true"
            android:defaultValue="@null"
            app:argType="com.example.exercice3.db.entities.Plombier" />
    </fragment>
    <fragment
        android:id="@+id/addInterventionFragment"
        android:name="com.example.exercice3.ui.addInterventionFragment"
        android:label="fragment_add_intervention3"
        tools:layout="@layout/fragment_add_intervention3" >
        <action
            android:id="@+id/actionInterventionRetour"
            app:destination="@id/interventionFragment" />
        <argument
            android:name="intervention"
            app:nullable="true"
            android:defaultValue="@null"
            app:argType="com.example.exercice3.db.entities.Intervention"

            />

    </fragment>
    <fragment
        android:id="@+id/search"
        android:name="com.example.exercice3.ui.Search"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <argument
            android:name="dte"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="null" />
        <action
            android:id="@+id/actionRetour"
            app:destination="@id/interventionFragment" />
    </fragment>
</navigation>